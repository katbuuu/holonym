    <script>
        function unlockLock() {
            const message = document.getElementById('unlockMessage');
            const button = document.querySelector('.mint-token');
            message.style.display = 'block';
            button.style.display = 'inline-block';
        }

        function mintToken() {
            alert("Redirecting to mint your Soulbound Token...");
            window.location.href = "https://mishti.network"; // Replace with actual minting link
